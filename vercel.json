{
  "version": 2,
  "builds": [
    { "src": "api/telegram.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "rewrites": [
    { "src": "/api/telegram", "dest": "/api/telegram.js" },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
